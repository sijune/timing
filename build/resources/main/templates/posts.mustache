{{>layout/header}}

<main>

    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
            </div>
        </div>
    </div>

<!-- news feed -->
    <div class="mt-2 mb-2">
        {{#posts}}

            <div class="p-3">
                <div class="row d-flex justify-content-center news-feed pb-3">
                    <div class="col-9">
                        <div class="d-flex flex-column justify-content-around news-feed-info">

                            <div class="d-flex news-feed-profile">
                                <img class="rounded-circle" src="https://i.imgur.com/uSlStch.jpg" width="50" height="50">
                                <div class="d-flex flex-column p-1">
                                    <h6 class="username">{{author}}</h6>
                                    <span class="date">{{modifiedDate}}</span>
                                </div>
                            </div>


                            <div class="news-feed-text">
                                <a href="/posts/update/{{id}}">
                                <h5>{{title}}</h5>
                                <span>{{content}}<br></span>
                                </a>
                            </div>

                            <div class="d-flex flex-row news-feed-icons">
                                <span class="news-feed-icon"><i class="far fa-thumbs-up"></i>34</span>
                                <span class="news-feed-icon"><i class="far fa-thumbs-down"></i>34</span>
                                <span class="news-feed-icon"><i class="far fa-comment-dots"></i>34</span>
                            </div>

                        </div>
                    </div>
                    <div class="col-3">
                        <div class="feed-image">
                            <img class="news-feed-image rounded img-fluid img-responsive" src="https://i.imgur.com/ZKbpmaU.jpg">
                        </div>
                    </div>
                </div>
            </div>

        {{/posts}}
    </div>

</main>

{{>layout/footer}}
